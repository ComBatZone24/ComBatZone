
{
  "rules": {
    ".read": false,
    ".write": false,

    "usernames": {
      ".read": true,
      ".write": "auth != null",
      "$username": {
        ".write": "auth != null && (!data.exists() || data.val() === auth.uid)",
        ".validate": "newData.isString() || newData.val() === null"
      }
    },
    
    "users": {
      ".write": "auth != null",
      ".read": "(auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('dashboard').val() === true))) || (auth == null && query.orderByChild == 'referralCode')",
      ".indexOn": ["username", "role", "referralCode", "createdAt", "email", "gameUid", "gameName"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "email": { ".read": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'" },
        "phone": { ".read": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'" },
        
        "role": {
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        },
        
        "delegatePermissions": { 
          ".read": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        },

        "pendingYoutubeSubmissions": {
            ".read": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
            "$submissionId": {
              ".write": "auth.uid === $uid",
              ".validate": "newData.hasChildren(['screenshotUrl', 'status', 'submittedAt'])"
            }
        }
      }
    },

    "userCount": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "redeemCodes": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$codeId": {
        ".read": "auth != null",
        ".write": "(auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin') || (auth != null && !data.child('claimedBy').hasChild(auth.uid) && newData.child('claimedBy').hasChild(auth.uid))"
      }
    },

    "walletTransactions": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null", 
      "$uid": {
        ".indexOn": ["date", "status", "requestId"],
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('withdrawals').val() === true || root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('dashboard').val() === true)))"
      }
    },

    "tokenTransactions": {
      ".write": "auth != null",
      "$uid": {
        ".indexOn": ["date"],
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    
    "tokenEconomyData": {
      ".read": true,
      ".write": "auth != null",
      ".validate": "newData.hasChildren(['circulatingSupply']) && newData.child('circulatingSupply').isNumber() && (!newData.hasChild('volumeSinceLastAdjustment') || newData.child('volumeSinceLastAdjustment').isNumber())"
    },

    "tokenMarketplace": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".indexOn": ["sellerId", "status"],
      "$orderId": {
        ".write": "auth != null && ( (!data.exists() && newData.child('sellerId').val() === auth.uid) || (data.exists() && ( (data.child('sellerId').val() === auth.uid && !newData.exists()) || (data.child('status').val() === 'active' && newData.child('status').val() === 'completed' && newData.child('buyerId').val() === auth.uid) )) )",
        ".validate": "newData.hasChildren(['sellerId', 'sellerUsername', 'tokenAmount', 'pricePerToken', 'status', 'createdAt']) && ( (!data.exists() && root.child('users').child(newData.child('sellerId').val()).child('tokenWallet').val() >= newData.child('tokenAmount').val()) || (data.exists() && (newData.child('status').val() !== 'completed' || newData.hasChildren(['buyerId', 'buyerUsername', 'completedAt']))) )"
      }
    },
    
    "pending_payouts": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "withdrawRequests": {
      ".indexOn": ["status", "uid", "requestDate"],
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('withdrawals').val() === true || root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('dashboard').val() === true)))",
      "$requestId": {
        ".read": "auth != null && (data.child('uid').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('withdrawals').val() === true))",
        ".write": "auth != null && ((newData.child('uid').val() === auth.uid && !data.exists()) || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('withdrawals').val() === true))"
      }
    },

    "tournaments": {
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('tournaments').val() === true))",
      ".indexOn": ["status", "startTime"],
      "$tournamentId": {
        ".read": true,
        "playersJoined": {
          ".read": true,
          "$uid": {
            ".write": "auth != null && auth.uid === $uid && data.parent().parent().child('status').val() === 'upcoming'"
          }
        }
      }
    },
    
    "tournamentChats": {
      ".read": "auth != null",
      "$tournamentId": {
        ".read": "(root.child('tournaments').child($tournamentId).child('playersJoined').hasChild(auth.uid)) || (root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".indexOn": ["timestamp"],
        "$messageId": {
          ".write": "(root.child('tournaments').child($tournamentId).child('playersJoined').hasChild(auth.uid)) || (root.child('users').child(auth.uid).child('role').val() === 'admin')",
          ".validate": "newData.hasChildren(['senderUid', 'senderUsername', 'message', 'timestamp']) && newData.child('senderUid').val() === auth.uid && newData.child('message').isString() && newData.child('message').val().length > 0 && newData.child('message').val().length < 500"
        }
      }
    },

    "coupons": {
      ".indexOn": ["code", "isActive"],
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('coupons').val() === true))"
    },

    "polls": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('polls').val() === true))",
      "$pollId": {
        "voters": {
          "$uid": {
            ".write": "auth != null && auth.uid === $uid && !data.exists()"
          }
        },
        "options": {
          "$optionId": {
            "votes": {
              ".write": "auth != null && newData.isNumber() && newData.val() === data.val() + 1"
            }
          }
        }
      }
    },

    "promoPosts": {
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('polls').val() === true))"
    },

    "clickAndEarnLinks": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "userClickAndEarnClaims": {
        "$uid": {
            ".read": "auth != null && auth.uid === $uid",
            ".write": "auth != null && auth.uid === $uid",
             "$linkId": {
                ".validate": "newData.isNumber()"
            }
        }
    },

    "leaderboards": {
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('leaderboards').val() === true))",
      ".indexOn": ["earnings", "username", "kills", "wins"]
    },

    "globalSettings": {
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('settings').val() === true))"
    },

    "shopItems": {
      ".read": true,
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('shop').val() === true))",
      ".indexOn": ["active", "category"]
    },

    "settings": {
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('settings').val() === true))",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('settings').val() === true))"
    },

    "tournament_results": {
      ".read": true,
      "$tournamentId": { 
        ".read": true,
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('results').val() === true))"
      }
    },

    "adminMessages": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$messageId": {
        ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin' || (newData.hasChild('readBy') && newData.child('readBy').hasChild(auth.uid))"
      }
    },
    "adminData": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "purchaseRequests": {
      ".indexOn": ["userId", "status", "orderTimestamp"],
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'delegate' && root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('shopOrders').val() === true))",
      "$orderId": {
        ".write": "auth != null && (newData.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('shopOrders').val() === true))",
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },

    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || auth.uid === $uid || (root.child('users').child(auth.uid).child('delegatePermissions').child('accessScreens').child('messages').val() === true))"
      }
    }
  }
}
